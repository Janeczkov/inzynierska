<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wybor2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Wybierz kategorię z zakresu technikum"
        android:textSize="22sp" />

    <Button
        android:id="@+id/matb"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_above="@+id/polskib"
        android:layout_alignParentStart="true"
        android:text="Matematyka" />

    <Button
        android:id="@+id/polskib"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_above="@+id/infb"
        android:layout_alignParentStart="true"
        android:text="Język polski" />

    <Button
        android:id="@+id/infb"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="175dp"
        android:text="Informatyka" />

    <Button
        android:id="@+id/angb"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infb"
        android:layout_marginTop="-175dp"
        android:text="Język angielski" />
</RelativeLayout>